<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioButton android:layout_width="wrap_content"
        android:id="@+id/idRbButton"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/idTxtTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="aaaaaaaaaaaaaa"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/idRbButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTxtDescriptionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        android:text="aaaaaaaaaaaaaaa"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toEndOf="@+id/idRbButton"
        app:layout_constraintTop_toBottomOf="@+id/idTxtTitleItem"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4C4C4C"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="@+id/idTxtDescriptionItem"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>